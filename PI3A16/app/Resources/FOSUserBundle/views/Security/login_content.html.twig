{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}


<br>
<form align="center" action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <label for="username">{{ 'Username'|trans }}</label><br>
    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" /><br>

    <label for="password">{{ 'Password'|trans }}</label><br>
    <input type="password" id="password" name="_password" required="required" /><br>

    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">{{ 'Remember me'|trans }}</label><br>

    <input type="submit" id="_submit" name="_submit" value="{{ 'Login'|trans }}" /><br>
</form>
<br>

